<main class="w-full flex-grow p-6">
  <h1 class="text-3xl text-black pb-6">Songs</h1>
  <%= form_tag admin_songs_path, :method => 'get'  do %>
    <%= text_field_tag :query, params[:query], autofocus: true,  type: "text", placeholder: 'search for songs', class: "block w-full p-4 pl-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
    <%= submit_tag "Search", type: "submit", class: "btn btn-primary btn-expanded" %>
  <% end %>
  <div class="w-full mt-6">
    <p class="text-xl pb-3 flex items-center">
    <i class="fas fa-list mr-3"></i> Song Table
    </p>
    <div class="bg-white overflow-auto">
      <table class="min-w-full bg-white">
        <thead class="bg-gray-800 text-white">
          <tr>
            <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Edit</th>
            <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">ID</th>
            <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Title</th>
            <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Url</th>
          </tr>
        </thead>
        <tbody class="text-gray-700">
          <% @songs.each_with_index do |song, index| %>
            <% if index.even? %>
              <tr>
                <td class="w-1/3 text-left py-3 px-4">
                  <a class="btn btn-sm" href="/admin/songs/<%= song.id%>">
                    Edit
                  </a>
                </td>
                <td class="w-1/3 text-left py-3 px-4"><%= song.id %></td>
                <td class="w-1/3 text-left py-3 px-4"><%= song.title %></td>
                <td class="w-1/3 text-left py-3 px-4"><%= song.url %></td>
              </tr>
            <% else %>
              <tr class="bg-gray-200">
                <td class="w-1/3 text-left py-3 px-4">
                  <a class="btn btn-sm" href="/admin/songs/<%= song.id%>">
                    Edit
                  </a>
                </td>
                <td class="w-1/3 text-left py-3 px-4"><%= song.id %></td>
                <td class="w-1/3 text-left py-3 px-4"><%= song.title %></td>
                <td class="w-1/3 text-left py-3 px-4"><%= song.url %></td>

              </tr>
            <% end %>
          <% end %>
      </table>
    </div>
  </div>
</main>

